<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutloginbtn"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      	android:layout_marginTop="0sp"
        android:contentDescription="@string/head"
        android:clickable="true"
        android:onClick="onClickImg"
        android:src="@drawable/head" />

    <TextView
        style="@style/MyTheme"
        android:id="@+id/tvInfoReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/helpStr1" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        android:textColor="@color/lightGray"
        android:text="@string/helpStr2.1" />
    
    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="15sp"
        android:textColor="@color/lightGray"
        android:text="@string/helpStr2.2" />

    <EditText
        android:id="@+id/EditTxtEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/button_1"
        android:layout_width="167dp"
        android:layout_height="51dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_back"
        android:layout_gravity="center_horizontal"
        android:text="@string/SignInbtnText"
        android:textColor="#fff"
        android:textStyle="bold" />
    
</LinearLayout>